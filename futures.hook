operation question
operation answer

type 'a result = Result of 'a

let get_answer f =
  with answer x ->
    Result x
  as result do
  question f;
  result

do
  let r = get_answer (fun () -> 3 + 3) in
  let y = 1 + 1 in
  let z = y + y in
  let w = y + z in
  let u = (w + 1) * (match r with Result x -> x) in
  u

do
  with question f ->
    let y = f () in
    answer y
  as _ do
  ()
